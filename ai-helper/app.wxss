/* 全局样式 */
page {
  background-color: #FFF0F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #333;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #FF6B9D, #FF8E9B);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 157, 0.4);
}

.btn-secondary {
  background: #F8F9FA;
  color: #FF6B9D;
  border: 2rpx solid #FF6B9D;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B9D;
  text-align: center;
  margin: 30rpx 0;
}

.subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #666;
  margin: 20rpx 0;
}

/* 文本样式 */
.text-primary {
  color: #FF6B9D;
}

.text-secondary {
  color: #666;
}

.text-center {
  text-align: center;
}

/* 间距工具类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 动画效果 */
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.bounce {
  animation: bounce 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.pulse {
  animation: pulse 2s infinite;
}

/* 图标样式 */
.icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.icon-large {
  width: 120rpx;
  height: 120rpx;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 20rpx;
  background: #F0F0F0;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B9D, #FF8E9B);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

/* 徽章样式 */
.badge {
  background: #FF6B9D;
  color: white;
  border-radius: 20rpx;
  padding: 5rpx 15rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 头像样式 */
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #FF6B9D;
}

.avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

/* 输入框样式 */
.input-group {
  margin: 20rpx 0;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-field {
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.input-field:focus {
  border-color: #FF6B9D;
  background: #FFFFFF;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 32rpx;
  }
}
